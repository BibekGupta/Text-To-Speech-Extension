{
  "manifest_version": 2,
  "name": "Text to Speech Extension",
  "version": "1.0",
  "description": "Converts text to speech in your browser.",
  "permissions": ["activeTab", "contextMenus"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
